<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 

  <ThingDef ParentName="BaseMechanoidWalker">
    <defName>AA_Daggersnout</defName>
    <label>daggersnout</label>
    <description>The daggersnout is a fast, insectlike combat mechanoid armed with a vicious sharp blade on its head. It isn't as dangerous as other close-ranged mechanoids, such as scythers, but they usually appear in greater numbers.\n\nNOTE: all Alpha Mechanoids can be disabled from raids, ships and clusters by Mod Options. This can be used even if they have already spawned.</description>
    <tools>
      <li>
        <label>snout blade</label>
        <capacities>
          <li>Cut</li>
          <li>Stab</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1</cooldownTime>
        <linkedBodyPartsGroup>AA_NoseBlade</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
	<comps>
			<li Class="AlphaBehavioursAndEvents.CompProperties_ChangeDef">
				<!-- Change to this pawn if Allow Alpha mechanoids is disabled in options -->
				<defToChangeTo>Mech_Scyther</defToChangeTo>
			</li>
		</comps>
    <race>
      <body>AA_DaggerSnoutBody</body>
      <baseHealthScale>0.8</baseHealthScale>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind">
    <defName>AA_Daggersnout</defName>
    <label>daggersnout</label>
    <race>AA_Daggersnout</race>
    <combatPower>95</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/AA_Daggersnout/AA_Daggersnout</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>0~0</weaponMoney>
    <defendPointRadius>0</defendPointRadius>
    <weaponTags>
    </weaponTags>
  </PawnKindDef>

 


</Defs>