  <ThingDef ParentName="BaseInsect">
    <defName>AA_Barbslinger</defName>
    <label>barbslinger</label>
				   <thingClass>AnimalVariations.AnimalMultiSkins</thingClass>

    <description>A large genetically-modified scorpion. No one really knows where they came from, but judging by its ability to rip apart living things within reach and shish kebab those outside of it, it’s a monster made for war.</description>
    <statBases>
      <MoveSpeed>4.00</MoveSpeed>
      <ComfyTemperatureMin>-2</ComfyTemperatureMin>
      <MarketValue>500</MarketValue>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>left pincer</label>
        <cooldownTime>1.5</cooldownTime>
        <power>20</power>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <linkedBodyPartsGroup>AA_PincerAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right pincer</label>
        <cooldownTime>1.5</cooldownTime>
        <power>20</power>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <linkedBodyPartsGroup>AA_PincerAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>AA_ToxicSting</li>
        </capacities>
        <cooldownTime>2</cooldownTime>
        <power>15</power>
        <linkedBodyPartsGroup>AA_Sting</linkedBodyPartsGroup>
      </li>
	   <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.1</chanceFactor>
      </li>
    
    </tools>
	
			<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<accuracyTouch>1</accuracyTouch>
				<accuracyShort>1</accuracyShort>
				<accuracyMedium>1</accuracyMedium>
				<accuracyLong>1</accuracyLong>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>AA_Bullet_Barb</defaultProjectile>
				<warmupTime>3</warmupTime>
				<burstShotCount>3</burstShotCount>
				<minRange>2</minRange>
				<range>20</range>
				<soundCast>AA_DartSound</soundCast>
				<muzzleFlashScale>0</muzzleFlashScale>
				<!--Commanility determines how frequent this range verb is chosen.-->
				<commonality>.8</commonality>
			</li>


		</verbs>
    <race>
      <wildBiomes>
        <Desert>0.3</Desert>
        <ExtremeDesert>0.1</ExtremeDesert>
        <AridShrubland>0.5</AridShrubland>
      </wildBiomes>
      <body>AA_ScorpionLike</body>
      <herdAnimal>false</herdAnimal>
      <predator>true</predator>
      <baseBodySize>2.50</baseBodySize>
      <baseHungerRate>1.0</baseHungerRate>
      <baseHealthScale>2.0</baseHealthScale>
      <fleshType>Insectoid</fleshType>
	  <leatherDef>Leather_Chitin</leatherDef>
      <bloodDef>Filth_BloodInsect</bloodDef>
      <useMeatFrom>Megaspider</useMeatFrom>
      <foodType>OmnivoreAnimal, AnimalProduct</foodType>
      <!--<leatherLabel>barbslinger chitin</leatherLabel>-->
      <wildness>0.9</wildness>
      <gestationPeriodDays>20</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(3, 0.7)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>7</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.14</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.70</minAge>
          <soundWounded>Pawn_Spelopede_Pain</soundWounded>
          <soundDeath>Pawn_Spelopede_Death</soundDeath>
          <soundCall>Pawn_Spelopede_Call</soundCall>
          <soundAngry>Pawn_Spelopede_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
	<tradeTags>
