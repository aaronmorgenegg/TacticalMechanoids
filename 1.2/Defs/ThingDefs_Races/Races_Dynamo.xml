<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="BaseMechanoid">
    <defName>TM_Dynamo</defName>
    <label>dynamo</label>
    <statBases>
    			<MoveSpeed>4.5</MoveSpeed>
    			<ArmorRating_Blunt>0.30</ArmorRating_Blunt>
    			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
    			<PsychicSensitivity>0.5</PsychicSensitivity>
    		</statBases>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
	<comps>
			<li Class="TacticalMechanoids.CompProperties_ChangeDef">
				<!-- Change to this pawn if Dynamo is disabled in options -->
				<defToChangeTo>Mech_Lancer</defToChangeTo>
        <defToChangeFrom>TM_Dynamo</defToChangeFrom>
			</li>
		</comps>
    <race>
      <intelligence>ToolUser</intelligence>
      <body>TM_DynamoBody</body>
			<thinkTreeMain>Mechanoid</thinkTreeMain>
      <baseBodySize>1.5</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
      <lifeStageAges>
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>0</minAge>
					<soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
					<soundCall>Pawn_Mech_Scyther_Call</soundCall>
				</li>
			</lifeStageAges>
      <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
			<Steel>20</Steel>
			<Plasteel>5</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="BaseMechanoidKind">
    <defName>TM_Dynamo</defName>
    <label>dynamo</label>
    <race>TM_Dynamo</race>
    <combatPower>150</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Mechanoid/Dynamo/dynamo</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.2, 0.6, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
		<weaponTags>
			<li>TM_MechanoidChargeCoils</li>
		</weaponTags>
  </PawnKindDef>



</Defs>
