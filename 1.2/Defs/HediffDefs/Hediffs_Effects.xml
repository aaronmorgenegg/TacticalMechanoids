<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>TM_ConstructiveMechanites</defName>
		<hediffClass>TacticalMechanoids.HediffCompConstructiveMechanites</hediffClass>
		<label>constructive mechanites</label>
		<description>Constructive mechanites from a nearby Mechanite Drone are repairing this mechanoid over time.</description>
		<defaultLabelColor>(0,0.8,0.5)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>500</min>
					<max>1500</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>

			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>TM_ToxicSludge</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.4, 0.7, 0.2)</defaultLabelColor>
		<description>Covered in Toxic Sludge, causing slowed movement, disease, and toxic buildup.</description>
		<label>toxic sludge</label>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.75</severityPerDayNotImmune>
			</li>
		</comps>

		<stages>

			<li>
				<label>initial</label>
				<minSeverity>0.00</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.90</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<vomitMtbDays>2</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.80</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>moderate</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.70</postFactor>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Flu</hediff>
						<mtbDays>146</mtbDays>
					</li>
				</hediffGivers>
			</li>

			<li>
				<label>serious</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>0.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.50</postFactor>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Flu</hediff>
						<mtbDays>37</mtbDays>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Plague</hediff>
						<mtbDays>146</mtbDays>
					</li>
				</hediffGivers>
			</li>

			<li>
				<label>extreme</label>
				<minSeverity>0.80</minSeverity>
				<vomitMtbDays>0.25</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Plague</hediff>
						<mtbDays>37</mtbDays>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Flu</hediff>
						<mtbDays>7</mtbDays>
					</li>
				</hediffGivers>
			</li>

		</stages>
	</HediffDef>

</Defs>
