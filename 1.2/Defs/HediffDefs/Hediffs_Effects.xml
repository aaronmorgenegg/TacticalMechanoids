<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>TM_ConstructiveMechanites</defName>
		<hediffClass>TacticalMechanoids.HediffCompConstructiveMechanites</hediffClass>
		<label>constructive mechanites</label>
		<description>Constructive mechanites from a nearby Mechanite Drone are repairing this mechanoid over time.</description>
		<defaultLabelColor>(0,0.7,0.7)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>500</min>
					<max>1500</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>

			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>TM_ToxicSludge</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.4, 0.7, 0.2)</defaultLabelColor>
		<description>Exposed to a slurry of toxic chemicals, including blistering and nerve agents. Immediate symptoms include reduced motor control, nausea, and difficulty breathing. Carcinoma, Dementia, chemical burns, and blisters may form after initial exposure.</description>
		<label>toxic sludge</label>
		<tendable>true</tendable>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.50</severityPerDay>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>12</baseTendDurationHours>
				<severityPerDayTended>-0.75</severityPerDayTended>
			</li>
			<li Class="TacticalMechanoids.HediffCompProperties_BurnsOverTime">
				<burnRate>9000</burnRate>
				<burnDamage>10</burnDamage>
				<blisterRate>15000</blisterRate>
				<burnVariance>0.25</burnVariance>
				<blisterVariance>0.25</blisterVariance>
				<burnDamageVariance>0.5</burnDamageVariance>
			</li>

		</comps>

		<stages>

			<li>
				<label>initial</label>
				<minSeverity>0.00</minSeverity>
				<vomitMtbDays>4</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.90</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.80</postFactor>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<postFactor>0.90</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>moderate</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.70</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.90</postFactor>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<postFactor>0.80</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>serious</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>0.25</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.50</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.80</postFactor>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<postFactor>0.70</postFactor>
					</li>
				</capMods>
			</li>

			<li>
				<label>extreme</label>
				<minSeverity>0.80</minSeverity>
				<vomitMtbDays>0.1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.10</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>0.70</postFactor>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<postFactor>0.50</postFactor>
					</li>
				</capMods>
			</li>

		</stages>
	</HediffDef>

	<HediffDef ParentName="DiseaseBase">
		<defName>TM_Blister</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>blister</label>
		<description>Painful blisters formed as a result of a chemical burn.</description>
		<defaultLabelColor>(1.0,0.0,0.0)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>0.3</initialSeverity>
		<tendable>true</tendable>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Infecter">
				<infectionChance>0.50</infectionChance>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>12</baseTendDurationHours>
			</li>
		</comps>
		<stages>
				<li>
					<label>minor</label>
					<minSeverity>0.0</minSeverity>
					<partEfficiencyOffset>-0.05</partEfficiencyOffset>
					<painOffset>0.1</painOffset>
				</li>
				<li>
					<label>moderate</label>
					<minSeverity>0.2</minSeverity>
					<partEfficiencyOffset>-0.15</partEfficiencyOffset>
					<painOffset>0.3</painOffset>
				</li>
				<li>
					<label>serious</label>
					<minSeverity>0.5</minSeverity>
					<partEfficiencyOffset>-0.30</partEfficiencyOffset>
					<painOffset>0.5</painOffset>
				</li>
		</stages>
	</HediffDef>

</Defs>
